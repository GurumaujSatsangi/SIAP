<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VIT SIAP</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <div class="container">
      <table class="table">
        <tr>
          <td>
            <div class="card">
              <div class="card-header">
                <b><i class="bi bi-person-fill"></i></b>
              </div>
              <div class="card-body">
                <p class="card-text">(Student)</p>
                <a href="/auth/login/student" class="btn btn-primary"
                  ><i class="bi bi-box-arrow-in-right"></i
                ></a>
              </div>
            </div>
          </td>
          <td>
            <div class="card">
              <div class="card-header">
                <b><i class="bi bi-person-fill-lock"></i></b>
              </div>
              <div class="card-body">
                <p class="card-text">(Admin)</p>
                <a href="/auth/login/admin" class="btn btn-primary"
                  ><i class="bi bi-box-arrow-in-right"></i
                ></a>
              </div>
            </div>
          </td>

         
        </tr>
      </table>
      <div class="card">
              <div class="card-header">
                <i class="bi bi-megaphone-fill"></i>&nbsp;<b>Announcements</b>
              </div>
              <div class="card-body">
                <%if (announcements && announcements.length>0){ %> <%
                announcements.forEach(function(announcements) { %>
                <ul>
                  <li><b><%=announcements.title%>&nbsp;<a target="_blank" href="<%=announcements.link%>">(Click Here)</a></b></li>
                  <br><p align="justify"><%=announcements.description %></p>
                </ul>
                <% }) %> <% } else{ %>
                <b>No Announcements to show!</b>
                <% } %>
              </div>
            </div>
    </div>
    <%- include('./partials/footer') %>
    <script src="/script.js"></script>

  </body>
</html>
